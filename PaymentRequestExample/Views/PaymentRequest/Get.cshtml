@model PaymentRequestExample.PaymentRequest.getpaymentrequestresponse

@{
    ViewBag.Title = "Get";
}

<h1>Payment request  <small>Get</small></h1>


@if(Model == null)
{
    <div class="alert warning">
        <button class="close" data-dismiss="alert">×</button>
        <strong>Note!</strong>
        No Payment Request found
    </div> 
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="control-group">
        <label class="control-label" for="paymentRequestId">PaymentRequestId</label>
        <div class="controls">
            <input type="text" name="paymentRequestId" class="span5" />
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Get paymentrequest</button>
    </div>
}



@if (Model != null)
{
    <br />
    <br />
    <h3>Result</h3>
    
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Status</th>
                <th>Key</th>
                <th>Created</th>
                <th>Reference</th>
                <th>Close date</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.paymentrequest.status</td>
                <td>@Model.paymentrequest.key</td>
                <td>@Model.paymentrequest.link</td>
                <td>@Model.paymentrequest.reference</td>
                <td>@Model.paymentrequest.exactclosedate</td>
            </tr>
        </tbody>
    </table>
}

