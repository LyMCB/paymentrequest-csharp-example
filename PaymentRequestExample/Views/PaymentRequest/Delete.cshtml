@model PaymentRequestExample.PaymentRequest.listpaymentrequestresponse

@{
    ViewBag.Title = "Delete";
}

<h1>Payment Request  <small>Delete</small></h1>
@if (Model.paymentrequestlist != null && Model.paymentrequestlist.Count > 0)
{

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Payment Request ID</th>
                <th>Amount</th>
                <th>Created</th>
                <th>Currency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.paymentrequestlist)
            {
            <tr>
                <td>@item.paymentrequestid</td>
                <td>@item.amount formid</td>
                <td>@item.created</td>
                <td>@item.currency</td>
                <td>
                    <div class="btn-group pull-right">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Action <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Delete", "DeletePaymentRequest", "paymentrequest", new { paymentRequestId = item.paymentrequestid }, null)</li>
                        </ul>
                    </div>
                </td>
            </tr>
            }

        </tbody>
    </table>
            
}

else
{
    <div class="alert warning">
        <button class="close" data-dismiss="alert">×</button>
        <strong>Note!</strong>
        No Payment Request found
    </div> 
}
