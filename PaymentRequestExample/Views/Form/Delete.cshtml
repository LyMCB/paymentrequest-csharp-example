@model PaymentRequestExample.PaymentRequest.listformresponse

@{
    ViewBag.Title = "Delete";
}



<h1>Form  <small>Delete</small></h1>
@if (Model.formlist != null && Model.formlist.Count > 0)
{

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Formid</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.formlist)
            {
            <tr>
                <td>@item.formid</td>
                <td>@item.name</td>
                <td>
                    <div class="btn-group pull-right">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Action <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Delete", "DeleteForm", "Form", new { formid = item.formid }, null)</li>
                        </ul>
                    </div>
                </td>
            </tr>
            }

        </tbody>
    </table>
            
}

else
{
    <div class="alert warning">
        <button class="close" data-dismiss="alert">×</button>
        <strong>Note!</strong>
        No forms found
    </div> 
}
