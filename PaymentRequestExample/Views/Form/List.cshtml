@model PaymentRequestExample.PaymentRequest.listformresponse

@{
    ViewBag.Title = "List";
}

<h1>Form  <small>List</small></h1>

@if (Model.formlist != null && Model.formlist.Count > 0)
{
    @Html.ActionLink("Refresh list", "RefreshList", null, new { @class = "btn btn-danger" }) 
    <br />
    <br />
    
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Formid</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.formlist)
            {
                <tr>
                    <td>@item.formid</td>
                    <td>@item.name</td>
                </tr>
            }
        </tbody>
    </table>
    
            if (ViewBag.ShowBackKey)
            {
    @Html.ActionLink("< Back", "List", new { startkey = ViewBag.BackKey, page = ViewBag.CurrentPage - 1 }, new { @class = "btn btn-primary" }) 
    @:&nbsp;
            }

    
    
    @Html.ActionLink("Next >", "List", new { startkey = Model.paging.lastevaluatedkey, page = ViewBag.CurrentPage + 1 }, new { @class = "btn btn-primary" }) 
    
    
}

else
{
    <div class="alert warning">
        <button class="close" data-dismiss="alert">×</button>
        <strong>Note!</strong>
        No forms found
    </div> 
}

