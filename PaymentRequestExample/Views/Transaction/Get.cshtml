@model PaymentRequestExample.PaymentRequest.gettransactionresponse

@{
    ViewBag.Title = "Get";
}

<h1>Transaction  <small>Get</small></h1>

@if (Model != null && Model.transaction == null)
{
    <div class="alert warning">
        <button class="close" data-dismiss="alert">×</button>
        <strong>Note!</strong>
        No Transaction found
    </div> 
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="control-group">
        <label class="control-label" for="paymentRequestId">Payment Request ID</label>
        <div class="controls">
            <input type="number" name="paymentRequestId" class="span5" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="transactionid">Transaction ID</label>
        <div class="controls">
            <input type="number" name="transactionid" class="span5" />
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Get transaction</button>
    </div>
}



@if (Model != null && Model.transaction != null)
{
    <br />
    <br />
    <h3>Result</h3>
    
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Transactionid</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.transaction.transactionid</td>
                <td>@Model.transaction.created</td>
            </tr>
        </tbody>
    </table>
}

