@model PaymentRequestExample.PaymentRequest.listtransactionresponse

@{
    ViewBag.Title = "List";
}

<h1>Transaction  <small>List</small></h1>

@if (Model != null && Model.transactionlist.Count > 0)
{
    @Html.ActionLink("Refresh list", "RefreshList", null, new { @class = "btn btn-danger" }) 
    <br />
    <br />
    
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Created</th>
                <th>TransactionID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.transactionlist)
            {
                <tr>
                    <td>@item.created</td>
                    <td>@item.transactionid</td>
                </tr>
            }
        </tbody>
    </table>
    
            if (ViewBag.ShowBackKey)
            {
    @Html.ActionLink("< Back", "List", new { startkey = ViewBag.BackKey, page = ViewBag.CurrentPage - 1 }, new { @class = "btn btn-primary" }) 
    @:&nbsp;
            }

    
    
    @Html.ActionLink("Next >", "List", new { startkey = Model.paging.lastevaluatedkey, page = ViewBag.CurrentPage + 1 }, new { @class = "btn btn-primary" }) 
    
    
}

else
{
    <div class="alert warning">
        <button class="close" data-dismiss="alert">×</button>
        <strong>Note!</strong>
        No Transaction found
    </div> 
    
    using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
    <div class="control-group">
        <label class="control-label" for="paymentRequestId">PaymentRequestId</label>
        <div class="controls">
            <input type="text" name="paymentRequestId" class="span5" />
        </div>
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Get List</button>
    </div>
    }

}
